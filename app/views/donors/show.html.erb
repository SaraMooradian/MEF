<div class="row">
	<div class="span 6 offset3">
		<div class="well">
			<p id="notice"><%= notice %></p>

			<p>
			  <b>Familyname:</b>
			  <%= @donor.familyname %>
			</p>

			<p>
			  <b>Status:</b>
			  <%= @donor.status %>
			</p>

			<p>
			  <b>Amount:</b>
			  <%= @donor.amount %>
			</p>

			<p>
			  <b>School:</b>
			  <%= @donor.school %>
			</p>
			<% if current_user == @donor.user %>	
				<%= link_to 'Edit', edit_donor_path(@donor) %> |
			<% end %>
			<%= link_to 'Back', donors_path %>
		</div>
	</div>
</div>